    <div class="mobile-menu" id="mobile-menu">
        <a href="#" class="nav-link">Home</a>
        <a href="#" class="nav-link">About Us</a>
        <a href="#" class="nav-link">Reserve Now</a>
        <a href="#" class="nav-link">Order Now</a>
        <a href="#" class="nav-link">Coffee Club</a>
        <a href="#" class="nav-link">Blogs</a>
        <a href="#" class="nav-link">Franchising</a>
        <a href="#" class="nav-link">Contact</a>
    </div>

    <div class="floating-ig">
        <a href="https://www.instagram.com/testkitchenbyokra/?hl=en" target="_blank">
            <img src="https://upload.wikimedia.org/wikipedia/commons/e/e7/Instagram_logo_2016.svg" alt="Instagram">
        </a>
    </div>

    <section class="page-section hero-bg">
        <div class="logo">TEST KITCHEN</div>
