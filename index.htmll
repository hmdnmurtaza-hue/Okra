        </div>
    </section>

    <section class="review-section" id="reviews-anchor">
        <h2 class="section-title">Reviews</h2>
        
        <div class="review-form-container">
            <h3 style="margin-bottom: 20px; font-family: 'Playfair Display';" id="form-title">Rate Your Experience</h3>
            
            <div class="review-field">
                <label>Name</label>
                <input type="text" id="userName" placeholder="Your name">
            </div>

            <div class="review-field">
                <label>Rating</label>
                <div class="star-input" id="starInput">
                    <i class="fa-solid fa-star" data-value="1"></i>
                    <i class="fa-solid fa-star" data-value="2"></i>
                    <i class="fa-solid fa-star" data-value="3"></i>
                    <i class="fa-solid fa-star" data-value="4"></i>
                    <i class="fa-solid fa-star" data-value="5"></i>
                </div>
            </div>

            <div class="review-field">
                <label>Comment</label>
                <textarea id="userComment" rows="3" placeholder="What did you try?"></textarea>
            </div>

            <div class="review-field">
                <label class="file-upload-label" for="foodImg">
                    <i class="fa-solid fa-camera"></i> Attach Food Photo
                </label>
                <input type="file" id="foodImg" hidden accept="image/*">
                
                <div class="preview-wrapper">
                    <span class="remove-img-btn" id="removeImgBtn" onclick="removeAttachment()">
                        <i class="fa-solid fa-xmark"></i>
                    </span>
                    <img id="reviewImgPreview" alt="Food Preview">
                </div>
            </div>

            <button class="submit-rev-btn" id="submitBtn" onclick="submitReview()">Post Review</button>
        </div>

        <div class="grid" id="reviewsGrid">
            <div class="review-card" id="sample-1">
                <div class="rev-actions">
                    <i class="fa-solid fa-pen-to-square" onclick="editReview('sample-1')"></i>
                    <i class="fa-solid fa-trash" onclick="deleteReview('sample-1')"></i>
                </div>
                <span class="rev-name">Sarah J.</span>
                <div class="rev-stars" data-rating="5"><i class="fa-solid fa-star"></i><i class="fa-solid fa-star"></i><i class="fa-solid fa-star"></i><i class="fa-solid fa-star"></i><i class="fa-solid fa-star"></i></div>
                <p class="rev-text">The Croissants are so flaky and authentic. Best breakfast spot!</p>
                <img src="https://images.unsplash.com/photo-1555507036-ab1f4038808a?q=80&w=400" class="rev-photo">
            </div>
        </div>
    </section>

    <footer>
        <div class="footer-nav">
            POWERED BY <span>NEXT-STEP WEBSITES FOR OKRA</span> | <a href="#">Privacy Policy</a> | <a href="#">FAQs</a>
        </div>
        <p style="font-size: 10px; color: #444; margin-top: 30px;">ALL Prices are Subject to 8% card & 15% Cash GST</p>
    </footer>

    <script>
        const hamburger = document.getElementById('hamburger');
        const mobileMenu = document.getElementById('mobile-menu');

        hamburger.onclick = () => {
            mobileMenu.classList.toggle('active');
            hamburger.querySelector('i').classList.toggle('fa-bars');
            hamburger.querySelector('i').classList.toggle('fa-xmark');
        };

        function filter() {
            let val = document.getElementById('search').value.toLowerCase();
            document.querySelectorAll('.item-card').forEach(card => {
                card.style.display = card.innerText.toLowerCase().includes(val) ? "flex" : "none";
            });
        }

        /* REVIEW LOGIC */
        let currentRating = 0;
        let isEditing = false;
        let editTargetId = null;
        const starIcons = document.querySelectorAll('#starInput i');
        
        starIcons.forEach(star => {
            star.onclick = () => {
                currentRating = star.getAttribute('data-value');
                updateStars(currentRating);
                
                // Add a quick pulse animation to the clicked star
                star.classList.add('star-pulse');
                setTimeout(() => {
                    star.classList.remove('star-pulse');
                }, 300);
            }
        });

        function updateStars(rating) {
            starIcons.forEach((s, index) => {
                if (index < rating) {
                    s.classList.add('active');
                } else {
                    s.classList.remove('active');
                }
            });
        }

        const foodImgInput = document.getElementById('foodImg');
        const preview = document.getElementById('reviewImgPreview');
        const removeBtn = document.getElementById('removeImgBtn');

        foodImgInput.onchange = () => {
            const file = foodImgInput.files[0];
            if (file) {
                const reader = new FileReader();
                reader.onload = (e) => {
                    preview.src = e.target.result;
                    preview.style.display = 'block';
                    removeBtn.style.display = 'flex'; // Show remove button
                };
                reader.readAsDataURL(file);
            }
        }

        // NEW: Function to remove the attached image
        function removeAttachment() {
            foodImgInput.value = ""; // Clear file input
            preview.src = "";
            preview.style.display = 'none';
            removeBtn.style.display = 'none';
        }

        function submitReview() {
            const name = document.getElementById('userName').value;
            const comment = document.getElementById('userComment').value;
            const grid = document.getElementById('reviewsGrid');

            if(!name || !comment || currentRating === 0) {
                alert("Please complete the form!");
                return;
            }

            let starHtml = '';
            for(let i=0; i<currentRating; i++) starHtml += '<i class="fa-solid fa-star"></i>';

            if (isEditing) {
                const card = document.getElementById(editTargetId);
                card.querySelector('.rev-name').innerText = name;
                card.querySelector('.rev-text').innerText = comment;
                card.querySelector('.rev-stars').innerHTML = starHtml;
                card.querySelector('.rev-stars').setAttribute('data-rating', currentRating);
                
                let img = card.querySelector('.rev-photo');
                if (preview.style.display === 'block') {
                    if (!img) {
                        img = document.createElement('img');
                        img.className = 'rev-photo';
                        card.appendChild(img);
                    }
                    img.src = preview.src;
                } else {
                    // If image was removed during edit, remove it from card too
                    if(img) img.remove();
                }
                resetForm();
            } else {
                const newId = 'rev-' + Date.now();
                const card = document.createElement('div');
                card.className = 'review-card';
                card.id = newId;
                card.innerHTML = `
                    <div class="rev-actions">
                        <i class="fa-solid fa-pen-to-square" onclick="editReview('${newId}')"></i>
                        <i class="fa-solid fa-trash" onclick="deleteReview('${newId}')"></i>
                    </div>
                    <span class="rev-name">${name}</span>
                    <div class="rev-stars" data-rating="${currentRating}">${starHtml}</div>
                    <p class="rev-text">${comment}</p>
                    ${preview.style.display === 'block' ? `<img src="${preview.src}" class="rev-photo">` : ''}
                `;
                grid.prepend(card);
                resetForm();
            }
        }

        function deleteReview(id) {
            if(confirm("Remove this review?")) {
                document.getElementById(id).remove();
            }
        }

        function editReview(id) {
            const card = document.getElementById(id);
            isEditing = true;
            editTargetId = id;

            document.getElementById('userName').value = card.querySelector('.rev-name').innerText;
            document.getElementById('userComment').value = card.querySelector('.rev-text').innerText;
            currentRating = card.querySelector('.rev-stars').getAttribute('data-rating');
            updateStars(currentRating);

            const cardImg = card.querySelector('.rev-photo');
            if (cardImg) {
                preview.src = cardImg.src;
                preview.style.display = 'block';
                removeBtn.style.display = 'flex';
            } else {
                preview.style.display = 'none';
                removeBtn.style.display = 'none';
            }

            document.getElementById('form-title').innerText = "Edit Your Review";
            document.getElementById('submitBtn').innerText = "Update Review";
            window.scrollTo({ top: document.getElementById('reviews-anchor').offsetTop - 80, behavior: 'smooth' });
        }

        function resetForm() {
            document.getElementById('userName').value = '';
            document.getElementById('userComment').value = '';
            document.getElementById('foodImg').value = '';
            preview.style.display = 'none';
            preview.src = '';
            removeBtn.style.display = 'none';
            updateStars(0);
            currentRating = 0;
            isEditing = false;
            editTargetId = null;
            document.getElementById('form-title').innerText = "Rate Your Experience";
            document.getElementById('submitBtn').innerText = "Post Review";
        }
    </script>
</body>
</html>